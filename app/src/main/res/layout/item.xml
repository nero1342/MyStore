<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/tools"
    android:background="#FFFBD7"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="5dp">
    
    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFBD7"
        android:padding="7dp">

        <ImageView
            android:id="@+id/itemThumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            cardview:srcCompat="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Item Title"
            android:textAppearance="@style/Theme.AppCompat"
            android:textSize="18dp"
            android:textStyle="bold | italic"
            android:maxLines="2"
            android:layout_below="@+id/itemThumbnail"
            />
        <TextView
            android:id="@+id/itemID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Item ID: N/A"
            android:textAppearance="@style/Theme.AppCompat"
            android:textSize="14dp"
            android:textStyle="normal | italic"
            android:maxLines="2"
            android:layout_below="@+id/itemTitle"
            />
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Item price: N/A"
            android:textAppearance="@style/Theme.AppCompat"
            android:textSize="14dp"
            android:textStyle="normal | italic"
            android:maxLines="2"
            android:layout_below="@+id/itemID"
            />
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Item Description"
            android:textAppearance="@style/Theme.AppCompat"
            android:textSize="10dp"
            android:maxLines="2"
            android:layout_below="@+id/itemPrice"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>